---
import CompanyLogo from './CompanyLogo.astro';
import Navigation from './Navigation.astro';
import SiteOptions from './SiteOptions.astro';

---

<header class="header">
  <div class="header__container spacing">
    <CompanyLogo imageUrl="/images/seeenso-logo.svg" caption='SeeEnso' width={42} height={42}/>
    <Navigation/>
    <SiteOptions />
  </div>
</header>

<style is:global>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    isolation: isolate;
    overscroll-behavior: contain;
    touch-action: none;
    transform: translateY(-100%);
  }

  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-backdrop, rgba(6, 5, 11, 0.3));
    backdrop-filter: var(--backdrop-blur, 10px);
    -webkit-backdrop-filter:var(--backdrop-blur, 10px);
    z-index: -1;
  }
  .header__container {
    --side: clamp(7px, 1.5vw,20px);
    --gap: clamp(.4em, 1vw ,1.875em);

    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--gap);

    width: min(90em, calc(100% - 2 * var(--side)));

    margin-inline: auto;

    &.spacing {
      margin-block-start: clamp(10px, 1.5vw, 33px);
      margin-block-end: 6px;
    }
  }

</style>