---
const playlistItemsUrl = import.meta.env.YOUTUBE_API_FULL_URL;
const response = await fetch(playlistItemsUrl);
const playlistData = await response.json()
---

{
  // @ts-ignore
  playlistData.items.map(({snippet}) => (
  <img  src={snippet.thumbnails?.maxres?.url || snippet.thumbnails?.standard.url} 
        alt={snippet.title}
        width={snippet.thumbnails?.maxres?.width || snippet.thumbnails?.standard.width}
        height={snippet.thumbnails?.maxres?.height || snippet.thumbnails?.standard.height}/>
  ))
}

<style>
  img {
    width: 25em;
    aspect-ratio: 16/9;
    object-fit: cover;
    border: 2px solid var(--color-accent);
    border-radius: 1.125em;
    filter: contrast(1.15);
  }

</style>